<?xml version='1.0' encoding='utf-8'?>
<widget id="au.com.ifm.ecusis" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>ECUSIS</name>
    <description>
        ECUSIS Map Mobile app
    </description>
    <author email="support@integratedfm.com.au" href="http://integratedfm.com.au">
        IntegratedFM (IFM) Team
    </author>
    
    <platform name="android">
        <icon src="platforms/android/res/icons/ldpi.png" density="ldpi" />
        <icon src="platforms/android/res/icons/mdpi.png" density="mdpi" />
        <icon src="platforms/android/res/icons/hdpi.png" density="hdpi" />
        <icon src="platforms/android/res/icons/xhdpi.png" density="xhdpi" />
        <icon src="platforms/android/res/icons/xxhdpi.png" density="xxhdpi" />
        <icon src="platforms/android/res/icons/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-76.png" width="76" height="76" />
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-40.png" width="40" height="40" />
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon.png" width="57" height="57" />
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-72.png" width="72" height="72" />
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-72@2x.png" width="144" height="144" />
        
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-small.png" width="29" height="29" />
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-50.png" width="50" height="50" />
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="platforms/ios/ECUSIS/Images.xcassets/AppIcon.appiconset/icon-83.5@2x.png" width="167" height="167" />
    </platform>
    <content src="index.html" />
    <access origin="*" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <engine name="android" spec="~6.2.3" />
    <engine name="ios" spec="~4.4.0" />
</widget>
